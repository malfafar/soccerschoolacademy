<div style="font-family: 'Open Sans', sans-serif; width: 800px; padding: 20px 40px;">

  <div style="padding: 30px 0px;background-color: #212228;max-width: 860px;text-align: center;">
    <%= link_to root_path, 'data-no-turbolink' => true do %>
      <%= image_tag("logo-mail.png") %>
    <% end %>
  </div>

  <p style="font-family: 'Open Sans', sans-serif; font-weight: 600;">
    <%= t('strings.mailers.coach.devise.confirmation.welcome') + " " +@email %>!
  </p>

  <p><%= t('strings.mailers.coach.devise.confirmation.phrase') %></p>

  <div style="border: none;
    background-color: #FF8502;
    border-radius: 4px;
    color: #fff;
    font-weight: 600;
    text-transform: uppercase;
    text-align: center;
    cursor: pointer;
    display: inline-block;
    overflow: auto;
    font-size: 14px;
    padding: 8px 20px 8px 20px;
    font-family: 'Work Sans', sans-serif;">
    <%= link_to t('strings.mailers.coach.devise.confirmation.button') , confirmation_url(@resource, confirmation_token: @token), {:style=>'color:#FFFFFF; text-decoration:none;'} %>
  </div>


</div>
