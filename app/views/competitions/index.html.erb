<%= render partial: 'admin_partials/index/header', locals: { section_title:  t("controller."+params[:controller]),
                                                  section_sub_title:  t("action."+params[:action]),
                                                  page_title: t("strings.competition.listing") ,
                                                  new_path: new_competition_path,
                                                  new_button_name: t("strings.competition.new"),
                                                  search_form_path: competitions_path } %>

<%= render "admin_partials/errors/notices" %>

        <div class="box-body table-responsive no-padding">
          <table class="table table-hover">
            <thead>
              <tr>
                <th><%= t "activerecord.attributes.competition.nr_teams" %></th>
                <th><%= t "activerecord.attributes.competition.knockout" %></th>
                <th><%= t "activerecord.attributes.competition.name" %><th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @competitions.each do |competition| %>
                <tr>
                  <td><%= competition.nr_teams %></td>
                  <td><%= t competition.knockout.to_s %></td>
                  <td><%= competition.name %></td>
                  <%= render partial: 'admin_partials/index/buttons', locals: { object: competition, edit_path: edit_competition_path(competition) } %>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div><!-- /.box-body -->

<%= render partial: 'admin_partials/index/footer', locals: { paginate_object: @competitions} %>
