  <div class="box-body">
    <%= form_for(@post) do |f| %>
      <%= render partial: 'admin_partials/errors/errors_form', locals: { current_object: @post} %>

      <div class="form-group">
        <%= f.label :photo %><br>
        <%= f.file_field :photo, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :title %><br>
        <%= f.text_field :title, class: "form-control", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :text %><br>
        <%= f.text_area :text, class: "form-control", required: true %>
      </div>

      <div class="form-group">
        <%= f.label :private %><br>
        <%= f.check_box :private %>
      </div>

      <% if params[:action] == "new" %>
          <div class="form-group">
            <%= f.label :level %><br>
            <%= f.select :level, options_for_select(get_levels_options().prepend(['No level', -1])), {} , class: "form-control" %>
          </div>
      <% end %>

      <div class="box-footer">
        <%= f.submit class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
