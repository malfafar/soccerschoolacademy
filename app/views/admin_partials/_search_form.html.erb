<%= form_tag( search_form_path, :method => "get", id: "search-form") do %>
  <div class="input-group">
    <%= text_field_tag :search, params[:search], placeholder: t("strings.admin.search"), class: "form-control input-sm pull-right", style: "width: 150px;" %>
    <div class="input-group-btn">
      <button class="btn btn-sm btn-default"><i class="fa fa-search"></i></button>
    </div>
  </div>
<% end %>
