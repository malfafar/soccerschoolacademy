# {{ ansible_managed }}

default: &default
  adapter: postgresql
  pool: 5

development:
  <<: *default
  database: {{ env_db_name }}

  username: {{ env_db_user }}
  password: {{ env_db_password }}

test:
  <<: *default
  database: {{ env_db_name }}_test

production:
  <<: *default
  database: {{ env_db_name }}

  username: {{ env_db_user }}
  password: {{ env_db_password }}
